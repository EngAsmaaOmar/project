<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/frist_linear"
        android:gravity="center"
        android:background="@drawable/main_menu_titleb_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/callus_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="100dp"
            android:text="@string/call_us"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/contact_us_close_icon" />




    </LinearLayout>



    <LinearLayout
        android:id="@+id/second_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/frist_linear">

    <android.support.v7.widget.CardView
        android:id="@+id/card_facebook"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp">


            <ImageView
                android:id="@+id/facebook_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/contact_us_facebook_icon"
                android:layout_marginLeft="13dp"
                android:layout_alignParentLeft="true" />


            <TextView
                android:id="@+id/facebook_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/facebook"
                android:textColor="@color/DarkBrown"
                android:layout_toEndOf="@+id/facebook_img"
                android:layout_toLeftOf="@+id/facebook_img"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/facebook_img" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
