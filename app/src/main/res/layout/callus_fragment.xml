                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp">



                <ImageView
                    android:id="@+id/tweet_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/contact_us_twitter_icon"
                    android:layout_marginLeft="13dp"
                    android:layout_alignParentLeft="true" />


                <TextView
                    android:id="@+id/tweet_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="23dp"
                    android:layout_marginStart="23dp"
                    android:layout_toEndOf="@+id/tweet_img"
                    android:layout_toLeftOf="@+id/tweet_img"
                    android:text="@string/tweet"
                    android:textColor="@color/DarkBrown"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/tweet_img"
                    android:layout_marginLeft="23dp" />



            </RelativeLayout>


        </android.support.v7.widget.CardView>


